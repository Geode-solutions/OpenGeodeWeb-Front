{
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "warn",
    "perf": "error",
    "style": "error",
    "restriction": "error"
  },
  "plugins": ["import", "node", "oxc", "promise", "unicorn", "vitest"],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "case": "snakeCase"
      }
    ],
    "eslint/func-style": [
      "error",
      {
        "style:": "declaration"
      }
    ],
    "eslint/sort-keys": "off",
    "eslint/no-ternary": "off"
  },
  "overrides": [
    {
      "files": ["**/components/*"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "case": "PascalCase"
          }
        ]
      }
    }
  ]
}
