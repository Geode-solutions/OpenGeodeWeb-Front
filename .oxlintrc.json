{
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "pedantic": "warn",
    "perf": "error",
    "style": "error",
    "restriction": "error"
  },
  "plugins": ["import", "node", "oxc", "promise", "unicorn", "vitest"],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "case": "snakeCase"
      }
    ],
    "eslint/func-style": [
      "error",
      {
        "style:": "declaration"
      }
    ],
    "vitest/require-hook": ["error", {
      "allowedFunctionCalls": ["defineProps", "defineEmits", "defineModel", "ref", "computed", "reactive", "watch", "watchEffect", "onMounted", "onBeforeMount", "onBeforeUnmount", "onUnmounted", "useEventListener", "useMousePressed", "defineExpose"]
    }]
  },
  "overrides": [
    {
      "files": ["**/components/*"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "case": "PascalCase"
          }
        ]
      }
    }
  ]
}
